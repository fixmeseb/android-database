<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SketchTagger">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.finalproject.MyDrawingArea
            android:id="@+id/cusView"
            android:layout_width="182dp"
            android:layout_height="125dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tagsButton"
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="popTags"
                android:text="Tag"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/addTags"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Clear"
                android:onClick="clear"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Save"
                android:onClick="SaveButton"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/findButton"
                android:layout_width="0dp"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="FindButton"
                android:text="Find"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/searchTags"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:textSize="25dp"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:orientation="horizontal"
            android:id="@+id/myList">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/BackButton"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:onClick="backButton"
            android:text="Back"
            android:textSize="25dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>